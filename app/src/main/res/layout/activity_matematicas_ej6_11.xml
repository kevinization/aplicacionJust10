        android:id="@+id/textView432"
        android:layout_width="356dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="¿Dónde hay más, en media docena o en dos cuartos de docena? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mat611_spn1" />

    <TextView
        android:id="@+id/textView429"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:text="¿Cuántas nueces hay en media docena? "
        app:layout_constraintEnd_toStartOf="@+id/mat611_txtNum3"
        app:layout_constraintTop_toBottomOf="@+id/imageView100" />

    <Spinner
        android:id="@+id/mat611_spn1"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView431" />

    <EditText
        android:id="@+id/mat611_txtNum3"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView100" />

    <Spinner
        android:id="@+id/mat611_spn2"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="268dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView432" />

    <EditText
        android:id="@+id/mat611_txtNum4"
        android:layout_width="95dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mat611_txtNum3" />

    <TextView
        android:id="@+id/textView430"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="¿Cuántas nueces hay en un cuarto de docena? "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView429" />

    <TextView
        android:id="@+id/textView431"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="¿Dónde hay más, en media docena o en un cuarto de docena? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView430" />

</androidx.constraintlayout.widget.ConstraintLayout>