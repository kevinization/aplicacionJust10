<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoacti"
    tools:context=".activity_matematicas_ej5_2c">

    <TextView
        android:id="@+id/textView352"
        android:layout_width="335dp"
        android:layout_height="91dp"
        android:layout_marginTop="24dp"
        android:text="Formas reflejadas en el agua"
        android:textColor="#F44336"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView353"
        android:layout_width="323dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="En las siguientes figuras, como el papel está doblado, sólo se ve la mitad de cada una. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView352" />

    <TextView
        android:id="@+id/textView354"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Imagina cómo se verían las figuras si el papel estuviera extendido. ¿Qué figuras son? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView353" />

    <ImageView
        android:id="@+id/imageView90"
        android:layout_width="363dp"
        android:layout_height="142dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView354"
        app:srcCompat="@drawable/figurasreflejo" />

    <Spinner
        android:id="@+id/mat52_spn1"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/mat52_spn2"
        app:layout_constraintTop_toBottomOf="@+id/imageView90" />

    <Spinner
        android:id="@+id/mat52_spn2"
        android:layout_width="96dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toStartOf="@+id/mat52_spn3"
        app:layout_constraintTop_toBottomOf="@+id/imageView90" />

    <Spinner
        android:id="@+id/mat52_spn3"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView90" />

    <Button
        android:id="@+id/button28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:onClick="comprobacion"
        android:text="Continuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mat52_spn2" />

    <TextView
        android:id="@+id/mat52_txtAciertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="64dp"
        android:text="Aciertos:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button28"
        app:layout_constraintTop_toBottomOf="@+id/mat52_spn1" />
</androidx.constraintlayout.widget.ConstraintLayout>