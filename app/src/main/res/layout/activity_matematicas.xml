<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoacti"
    tools:context=".activity_matematicas">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/btnSiguiente"
        android:onClick="Premios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/botoncontinuar" />

    <TextView
        android:id="@+id/lblNumero"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Número"
        android:textColor="#4CAF50"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblparrafo1"
        android:layout_width="379dp"
        android:layout_height="167dp"
        android:layout_marginTop="16dp"
        android:text="Los números naturales, es decir, aquellos que utilizamos para contar (1, 2, 3,...) y el cero, permiten resolver una gran variedad de situaciones, por ejemplo: contar colecciones, compararlas e igualarlas, comunicar cantidades, expresar medidas, ordenar elementos. "
        android:textAlignment="gravity"
        android:textColor="#2196F3"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNumero" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="375dp"
        android:layout_height="159dp"
        android:layout_marginTop="20dp"
        android:text="A través de las actividades propuestas, se analizan estas situaciones, así como los distintos aspectos de los números que se ponen en juego al resolverlas: la importancia del conteo oral, el aspecto cardinal, el ordinal y la representación simbólica de los números. "
        android:textAlignment="gravity"
        android:textColor="#F44336"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblparrafo1" />

    <TextView
        android:id="@+id/lblparrafo3"
        android:layout_width="376dp"
        android:layout_height="141dp"
        android:layout_marginTop="8dp"
        android:text="Al mismo tiempo, se analizan las dificultades que enfrentan los usuarios en el proceso de aprender a utilizar esta herramienta fundamental, así como las condiciones didácticas que pueden favorecer este proceso. "
        android:textColor="#513636"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.333" />
</androidx.constraintlayout.widget.ConstraintLayout>