<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoacti"
    tools:context=".acivity_matematicas_ej4_2">

    <TextView
        android:id="@+id/mat42_txtAciertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="comprobacion"
        android:text="Aciertos:"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:onClick="comprobacion"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView339"
        android:layout_width="325dp"
        android:layout_height="94dp"
        android:text="Caminamos para ir a la escuela"
        android:textColor="#4CAF50"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView340"
        android:layout_width="362dp"
        android:layout_height="55dp"
        android:text="Julián y otros niños van a la escuela, como está retirado, caminan mucho para llegar. Ya en camino, les gusta voltear y ver sus casas. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView339" />

    <TextView
        android:id="@+id/textView341"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contesta las siguientes preguntas: "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView340" />

    <TextView
        android:id="@+id/textView344"
        android:layout_width="331dp"
        android:layout_height="39dp"
        android:text="Los niños dicen que entre más se alejan, se van haciendo más pequeñas, ¿Tú qué piensas? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mat42_spn2" />

    <Spinner
        android:id="@+id/mat42_spn1"
        android:layout_width="93dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView342" />

    <Spinner
        android:id="@+id/mat42_spn2"
        android:layout_width="94dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView343" />

    <Spinner
        android:id="@+id/mat42_spn3"
        android:layout_width="96dp"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView344" />

    <TextView
        android:id="@+id/textView343"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cómo crees que las verán cuando estén más lejos? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mat42_spn1" />

    <TextView
        android:id="@+id/textView342"
        android:layout_width="348dp"
        android:layout_height="40dp"
        android:text="¿Cómo crees que los niños ven sus casas cuando todavía están cerca? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView341" />

    <ImageView
        android:id="@+id/imageView88"
        android:layout_width="395dp"
        android:layout_height="130dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView344"
        app:srcCompat="@drawable/casas" />

    <Spinner
        android:id="@+id/mat42_spn4"
        android:layout_width="88dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/mat42_spn5"
        app:layout_constraintTop_toBottomOf="@+id/imageView88" />

    <Spinner
        android:id="@+id/mat42_spn5"
        android:layout_width="83dp"
        android:layout_height="26dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/mat42_spn6"
        app:layout_constraintTop_toBottomOf="@+id/imageView88" />

    <Spinner
        android:id="@+id/mat42_spn6"
        android:layout_width="86dp"
        android:layout_height="26dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/mat42_spn7"
        app:layout_constraintTop_toBottomOf="@+id/imageView88" />

    <Spinner
        android:id="@+id/mat42_spn7"
        android:layout_width="92dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView88" />

    <TextView
        android:id="@+id/textView345"
        android:layout_width="370dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:text="Elige el orden de las imágenes de arriba: pon el número 1 al dibujo de cómo ver los niños las casas cuando están muy cerca, el número 2 al dibujo de cómo las ven cuando están un poco más lejos y continúa así hasta llegar al número 4. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView88" />
</androidx.constraintlayout.widget.ConstraintLayout>